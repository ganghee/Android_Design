<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ConThemeActivity"
        android:orientation="vertical"
        android:gravity="center"
>
    <ImageView
            android:id="@+id/image_icon"
            android:src="@drawable/icmog"
            android:layout_width="200dp" android:layout_height="300dp"/>
    <TextView
            android:id="@+id/textView_head"
            android:text="Horrahh!"
            android:textSize="30sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
    />
    <TextView
            android:id="@+id/textView_sub"
            android:text="Green and Nature are friends!"
            android:textSize="20sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/button_icon"
            android:text="Continue"
            android:layout_marginTop="200dp"
            android:layout_width="162dp" android:layout_height="64dp"
            android:background="@drawable/background_green"
    />

</LinearLayout>