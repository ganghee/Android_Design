<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <View
            android:id="@+id/holderbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <View
            android:id="@+id/dynamicbg"
            android:elevation="2dp"
            android:layout_width="match_parent" android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:scaleX="0" android:scaleY="0" tools:layout_editor_absoluteY="0dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:id="@+id/textView"
            android:elevation="7dp"
            android:text="Choose Your Mood"
            android:textColor="#fff" android:textSize="28sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="@+id/dynamicbg"/>
    <TextView
            android:id="@+id/texView2"
            android:elevation="7dp"
            android:textColor="#3c000000"
            android:text="Theme is still able to be change \nunder in the setting"
            android:textAlignment="center" android:textSize="18sp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="84dp" app:layout_constraintTop_toTopOf="@+id/dynamicbg"
    />
    <Button
            android:id="@+id/btn_green"
            android:elevation="7dp"
            android:background="@drawable/background_green"
            android:layout_width="57dp" android:layout_height="57dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/texView2"/>
    <Button
            android:id="@+id/btn_blue"
            android:elevation="7dp"
            android:background="@drawable/background_blue"
            android:layout_width="57dp" android:layout_height="57dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_green" app:layout_constraintHorizontal_bias="0.508"/>
    <Button
            android:id="@+id/btn_orange"
            android:elevation="7dp"
            android:background="@drawable/background_orange"
            android:layout_width="57dp" android:layout_height="57dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_blue" app:layout_constraintHorizontal_bias="0.504"/>
    <Button
            android:id="@+id/btn_purple"
            android:elevation="7dp"
            android:background="@drawable/background_purple"
            android:layout_width="57dp" android:layout_height="57dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_orange"/>
    <Button
            android:id="@+id/btn_save"
            android:text="Save Now" android:textSize="20sp"
            android:textAllCaps="false" android:elevation="7dp"
            android:textColor="#1abc9c" android:background="@drawable/background_white"
            android:layout_width="200dp" android:layout_height="50dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="@+id/dynamicbg" app:layout_constraintHorizontal_bias="0.497"/>
    <!--elevation 속성을 지정해서 뷰들 간의 가려짐을 조절한다.-->
</android.support.constraint.ConstraintLayout>