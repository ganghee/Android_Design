<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.ebanx.swipebtn.SwipeButton
            android:id="@+id/swipe_me"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:inner_text="SWIPE TO LOCK"
            app:inner_text_size="18sp"
            app:inner_text_bottom_padding="20dp"
            app:inner_text_top_padding="20dp"
            app:button_image_disabled="@drawable/ic_lock_closed"
            app:button_image_enabled="@drawable/ic_lock_open"
            app:button_top_padding="20dp"
            app:button_bottom_padding="20dp"
            app:button_left_padding="20dp"
            app:button_right_padding="20dp"
    />


</RelativeLayout>