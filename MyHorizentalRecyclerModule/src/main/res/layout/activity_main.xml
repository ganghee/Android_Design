<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
android:layout_width="match_parent"
        android:fillViewport="true">

<android.support.constraint.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.MainJavaActivity">

    <View android:layout_width="460dp" android:layout_height="440dp"
          android:layout_marginEnd="8dp"
          android:background="@drawable/bgheader"
          app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="296dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.507"
          android:id="@+id/view"/>

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Event"
            android:textSize="24sp"
            android:textColor="#fff"
            android:fontFamily="@fonts/mr"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.045"/>
    <TextView
            android:text="around Jakarta Selatan"
            android:textColor="#9CFFFFFF"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ml"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.117"
            android:id="@+id/textView"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="350dp"
            android:clipToPadding="false"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView2">
        <!--android:paddingRight="250dp"" 맨 마지막 아이템에서 오류가 나는 것을 막아준다-->

    </android.support.v7.widget.RecyclerView>
    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="AUTHOR PICK" app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="236dp"
            android:layout_marginBottom="280dp" android:id="@+id/textView2"/>
    <LinearLayout
            android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/linearLayout">
        <ImageView android:layout_width="100dp" android:layout_height="100dp"
                   android:src="@drawable/picsmallone" android:scaleType="centerCrop"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Learn Gratitude"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Feb 22, 2018"/>
        </LinearLayout>
        <LinearLayout
                android:gravity="center" android:layout_marginStart="80dp"
                android:layout_width="100dp" android:layout_height="50dp" android:background="@drawable/bgitem_ivory">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="RELIGION"
                      android:textColor="#E91E63"
            />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:id="@+id/linearLayout2">
        <ImageView android:layout_width="100dp" android:layout_height="100dp"
                   android:src="@drawable/picsmallone" android:scaleType="centerCrop"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Learn Gratitude"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Feb 22, 2018"/>
        </LinearLayout>
        <LinearLayout
                android:gravity="center" android:layout_marginStart="80dp"
                android:layout_width="100dp" android:layout_height="50dp" android:background="@drawable/bgitem_ivory">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="RELIGION"
                      android:textColor="#E91E63"
            />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal" android:gravity="center_vertical"
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
        <ImageView android:layout_width="100dp" android:layout_height="100dp"
                   android:src="@drawable/picsmallone" android:scaleType="centerCrop"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Learn Gratitude"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Feb 22, 2018"/>
        </LinearLayout>
        <LinearLayout
                android:gravity="center" android:layout_marginStart="80dp"
                android:layout_width="100dp" android:layout_height="50dp" android:background="@drawable/bgitem_ivory">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="RELIGION"
                      android:textColor="#E91E63"
            />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
</ScrollView>