<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
>
    <LinearLayout
            android:id="@+id/event_parent"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_marginRight="10dp"
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:background="@drawable/bgitem_custom"
            android:gravity="center_horizontal"
    >
        <ImageView
                android:id="@+id/eventimage"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/picone"
                android:scaleType="centerCrop"
        />
        <TextView
                android:id="@+id/eventtitle"
                android:text="Ecotourism With a Master Boo"
                android:textSize="15sp"
                android:fontFamily="@font/mm"
                android:padding="15dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="80dp"/>
        <LinearLayout
                android:id="@+id/eventbadge"
                android:background="@drawable/bgitem_ivory"
                android:alpha="0"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:baselineAligned="true">
            <TextView
                    android:id="@+id/eventcategory"
                    android:textColor="#FF9800"
                    android:textSize="10sp"
                    android:fontFamily="@font/mm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WORDSHOP"
            />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>